{
  "name": "claude-worktree",
  "version": "1.0.0",
  "description": "Desktop app for orchestrating multiple Claude agents in parallel git worktrees",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-vite build && electron-builder --mac",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "appId": "com.claudeworktree.app",
    "productName": "Claude Worktree",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "dir"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ]
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@playwright/test": "^1.50.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "jest": "^29.7.0",
    "playwright": "^1.50.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
